<!DOCTYPE html>
<html>

<head>
    <title>Servicios</title>
    <!-- Agrega este script en la sección head de tu HTML -->
    <script>
        function toggleCard(cardId) {
            var cardBody = document.getElementById('card-body-' + cardId);
            if (cardBody.style.display === 'none' || cardBody.style.display === '') {
                cardBody.style.display = 'block';
            } else {
                cardBody.style.display = 'none';
            }
        }
    </script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1>Servicios Básicos</h1>
                    </div>
                    <div class="card-body">
                        {{#if contacts}}
                        <ul class="list-group">
                            {{#each contacts}}
                            <li class="list-group-item">
                                <div class="card mb-3">
                                    <div class="card-body" id="card-body-{{id}}">
                                        {{!-- <h5 class="card-title">{{firstname}} {{lastname}}</h5> --}}
                                        <p class="card-text">{{icono}}</p>
                                        <p class="card-text">{{procedimiento}}</p>
                                        <p class="card-text">{{descripcion}}</p>
                                        <p class="card-text">{{material}}</p>
                                        <p class="card-text">{{tiempo}}</p>
                                        <p class="card-text">{{precio}}</p>
                                    </div>
                                    <div class="card-footer">
                                        <a href="/delete-contact/{{id}}" class="btn btn-danger">Delete</a>
                                        <a href="/edit-contact/{{id}}" class="btn btn-primary">Editar</a>
                                        <button class="btn btn-secondary"
                                            onclick="toggleCard('{{id}}')">Show/Hide</button>
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                        {{else}}
                        <p>No hay servicios.</p>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1>Añadir nuevo servicio</h1>
                    </div>
                    <div class="card-body">
                        <form action="/new-contact" method="POST">
                            <div class="form-group">
                                <input type="text" name="icono" placeholder="icono" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="procedimiento" placeholder="procedimiento" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="descripcion" placeholder="descripcion" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="material" placeholder="material" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="tiempo" placeholder="tiempo"
                                    class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="precio" placeholder="precio" class="form-control">
                            </div>
                            <button class="btn btn-primary btn-block">Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
<!DOCTYPE html>
<html>
<head>
    <title>Contactos</title>
    <!-- Agrega este script en la sección head de tu HTML -->
    <script>
        function toggleCard(cardId) {
            var cardBody = document.getElementById('card-body-' + cardId);
            if (cardBody.style.display === 'none' || cardBody.style.display === '') {
                cardBody.style.display = 'block';
            } else {
                cardBody.style.display = 'none';
            }
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1>Servicios Básicos</h1>
                    </div>
                    <div class="card-body">
                        {{#if contacts}}
                        <ul class="list-group">
                            {{#each contacts}}
                            <li class="list-group-item">
                                <div class="card mb-3">
                                    <div class="card-body" id="card-body-{{id}}">
                                        <h5 class="card-title">{{firstname}} {{lastname}}</h5>
                                        <p class="card-text">{{email}}</p>
                                        <p class="card-text">{{phone}}</p>
                                    </div>
                                    <div class="card-footer">
                                        <a href="/delete-contact/{{id}}" class="btn btn-danger">Delete</a>
                                        <a href="/edit-contact/{{id}}" class="btn btn-primary">Editar</a>
                                        <button class="btn btn-secondary" onclick="toggleCard('{{id}}')">Show/Hide</button>
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                        {{else}}
                        <p>No hay contactos.</p>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1>Añadir nuevo contacto</h1>
                    </div>
                    <div class="card-body">
                        <form action="/new-contact" method="POST">
                            <div class="form-group">
                                <input type="text" name="firstname" placeholder="firstname" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="lastname" placeholder="lastname" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="email" placeholder="email" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="phone" placeholder="phone" class="form-control">
                            </div>
                            <button class="btn btn-primary btn-block">Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>